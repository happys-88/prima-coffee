<div class="mz-newsletter">
	<h4>{{ labels.stayConnected }}</h4>
	<p>{{ labels.signUpTitle }}</p>
	<form onsubmit="return false;">
		<div class="form-group">
			<div class="input-group">					  	
				<input type="email" class="form-control" placeholder="{{ labels.enterEmailAddress }}" id="blognewsletterEmail">
				<span class="input-group-btn">
					<button class="btn btn-default" id="blognewsletter" type="button" >{{ labels.join }}</button>
				</span>
			</div>
			<div class="input-group">   
				<span id="blogerrorEmail" hidden="true">Please enter correct email</span>  
				<span id="blogthanksMsg" hidden="true">Thanks for Subscribing!!</span>
			</div>
		</div>						
	</form>
</div>